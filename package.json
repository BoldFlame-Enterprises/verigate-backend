{
  "name": "accreditation-system",
  "version": "1.0.0",
  "description": "QR Code-based Accreditation System for Sports Events",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only server/index.ts",
    "build": "npm run build:server && npm run build:admin",
    "build:server": "tsc",
    "build:admin": "cd admin-dashboard && npm run build",
    "install:all": "npm install && cd admin-dashboard && npm install && cd ../qr-generator-app && npm install && cd ../scanner-app && npm install",
    "setup:db": "ts-node server/scripts/setup-database.ts",
    "seed:db": "ts-node server/scripts/seed-database.ts",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "argon2": "^0.31.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-slow-down": "^1.3.5",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.15.4",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.13",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "qr-code",
    "accreditation",
    "sports-event",
    "access-control",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT"
}
